{
  "manifest_version": 3,
  "name": "Anime Tracker",
  "version": "0.2.4.1",
  "description": "Detecta y registra episodios de anime desde cualquier URL.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon.png",
        "icons/icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
